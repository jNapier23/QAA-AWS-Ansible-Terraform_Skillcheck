#!groovy


//Pulls IP address of deployment instance 1
def ip = readFile(file: deployment1_ip.txt)

pipeline {
    agent { dockerfile true }
    stages {
        stage('Test') {
            steps {
                //Few commands to show directory, jenkins and docker versions
                sh 'pwd'
                sh 'jenkins --version'
                sh 'docker --version'
            }
        }
        stage('Deploy') {
            steps {
                
                //Deploys dockerfile to create container on remote instance, referencing IP pulled eariler
                sh 'docker -H ssh://ec2-user@${ip} run -it --rm busybox'
                sh 'docker build -t jwnapier23/ubuntu:latest'

            }
        }
    }
}